{% extends 'MyLibraryBundle::layout.html.twig' %}

{% block content %}
    <h1>Login</h1>

    <p>
        Please login.
    </p>

    {% if error is defined and error %}
        <div class="error">{{ error.message }}</div>
    {% endif %}

    <form action="{{ path("mylibrary_login_check") }}" method="post" id="login">
        <div>
            <label for="username">Username</label>
            <input type="text" id="username" name="_username" value="{{ username|default('Username') }}" />
        </div>

        <div>
            <label for="password">Password</label>
            <input type="password" id="password" name="_password" />
        </div>

        <input type="submit" class="symfony-button-grey" value="LOGIN" />
    </form>
    
    <a href="{{ path("mylibrary_register") }}">New here? Go and register!</a>
{% endblock %}

{% set code = code(_self) %}
